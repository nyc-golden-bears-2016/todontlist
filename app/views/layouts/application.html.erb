<!DOCTYPE html>
<html>
  <head>
    <title>ToDont</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if session[:user_id] %>
      <nav><%= button_to "Don't Push This Button", logout_path %></nav>
    <% end %>
    <%= yield %>
  </body>
</html>
